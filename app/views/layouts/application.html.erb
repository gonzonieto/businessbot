<!DOCTYPE html>
<%= tag.html do %>
  <%= tag.head do %>
    <%= tag.title "Businessbot" %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%# Tailwind CSS %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%# DaisyUI Component Library %>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@2.46.1/dist/full.css" rel="stylesheet" type="text/css" />

    <%# Application styles %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    
    <%= javascript_importmap_tags %>

    <%# Font Awesome Pro icon library %>
    <script src="https://kit.fontawesome.com/35b3e465df.js" crossorigin="anonymous"></script>
    <%= hotwire_livereload_tags if Rails.env.development? %>
  <% end %>

  <%= tag.body class: "#{controller_name} #{action_name}" do %>
    <%= render "shared/header" %>
    <%= tag.main class: "w-11/12 mx-auto mt-6" do %>
      <% flash.each do |type, msg| %>
        <%= tag.div class: "alert alert-error justify-center" do %>
          <%= icon('circle-exclamation', 'solid') %>
          <%= tag.span msg %>
        <% end %>
      <% end %>
      <%= yield %>
    <% end %>
  <% end %>
<% end %>
